<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".app.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="9.5"

        android:paddingVertical="20dp"
        android:paddingHorizontal="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil :"
        android:textSize="40dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/red" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PrÃ©nom:">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_profile_firstname"
        android:inputType="text"
        android:hint="firstname">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom:">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_profile_lastname"
        android:inputType="text"
        android:hint="lastname">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mail:">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_profile_mail"
        android:inputType="textEmailAddress"
        android:hint="mail">
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_profile_update"
        android:text="Sauvegarder"
        android:onClick="onProfileClickManager"
        tools:ignore="onClick"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Old password:">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_profile_password"
        android:inputType="textPassword"
        android:hint="old password"
        >
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New password:">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_profile_password2"
        android:inputType="textPassword"
        android:hint="new password"
        >
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_profile_updatePwd"
        android:text="Inscription"
        android:onClick="onProfileClickManager"
        tools:ignore="onClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageButton
            android:id="@+id/btn_profile_listPlc"
            android:layout_height="wrap_content"
            android:layout_width="48dp"
            android:onClick="onProfileClickManager"
            tools:ignore="onClick"
            android:layout_weight="1"
            android:src="@drawable/ic_robot"
            android:background="@color/purple_500"/>
        <ImageButton
            android:background="@color/purple_500"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="48dp"
            android:id="@+id/btn_profile_profile"
            android:src="@drawable/ic_user"
            android:onClick="onProfileClickManager"
            tools:ignore="onClick"
            />
    </LinearLayout>
</LinearLayout>
